mixin icon(name,mod)
  if(mod)
    svg(class="svg-icon " + name + ' ' + mod)
      use(xlink:href="./img/sprites/sprite.svg#" + name)
  else
    svg(class="svg-icon " + name)
      use(xlink:href="./img/sprites/sprite.svg#" + name)

mixin burger
  button.btn-reset.menu-btn(aria-label="Кпопка бургер")
    span.menu-btn__line
    span.menu-btn__line
    span.menu-btn__line
    span.menu-btn__line
    span.menu-btn__close