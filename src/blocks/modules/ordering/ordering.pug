                                button.btn-reset.g-filters__btn.ordering-switch__btn(type="button" data-filters-path="way2")
                                    span.ordering-switch__title Доставка курьером сдэк
                                    span.ordering-switch__desc Доставляем по РФ и СНГ за 3–14 дней
                            li.g-filters__item.ordering-switch
                                button.btn-reset.g-filters__btn.ordering-switch__btn(type="button" data-filters-path="way3")
                                    span.ordering-switch__title Пункты выдачи СДЭК по РФ
                                    span.ordering-switch__desc Выберите любой из 6000+ пунктов выдачи СДЭК
                        .g-filters__content.g-filters__content--active.ordering-content__inner(data-filters-target="way1")
