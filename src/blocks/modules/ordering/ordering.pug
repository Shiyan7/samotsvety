                        .g-filters__content.ordering-content__inner.ordering-address(data-filters-target="way2")
                            h2.ordering-address__title Адрес доставки
                            label.ordering__label.ordering__input--md
                                span Город
                                select.g-select(name="city")
                                    option(value="city-1") САНКТ-ПЕТЕРБУРГ
                                    option(value="city-2") Москва
                                    option(value="city-3") Воронеж
                                    option(value="city-4") САНКТ-ПЕТЕРБУРГ
                                    option(value="city-5") Москва
                                    option(value="city-6") Воронеж
                            label.ordering__label.ordering__input--md
                                span Улица
                                input.g-input(type="text" name="promocode" placeholder="введите НАЗВАНИЕ УЛИЦЫ")
                            .ordering__row
                                label.ordering__label
                                    span Дом, корпус, строение
                                    input.g-input.ordering__input--lg(type="text" name="name" placeholder="введите номер Дома, корпус")
                                label.ordering__label
                                    span Квартира/Офис
                                    input.g-input.ordering__input--lg(type="tel" name="phoneNumber" placeholder="введите номер Квартиры/Офиса")
                            .ordering-total
                                h2.ordering-total__title Стоимость и срок доставки: 
                                p.ordering-total__desc 
                                    span от 900 ₽, 
                                    |1 день     
                        .g-filters__content.ordering-content__inner.switch-tabs(data-filters-target="way3")
                            label.ordering__label.ordering__label--2
                                span Город
                                select.g-select(name="city")
                                    option(value="city-1") САНКТ-ПЕТЕРБУРГ
                                    option(value="city-2") Москва
                                    option(value="city-3") Воронеж
                                    option(value="city-4") САНКТ-ПЕТЕРБУРГ
                                    option(value="city-5") Москва
                                    option(value="city-6") Воронеж
                            ul.switch-tabs__list.list-reset
                                li.switch-tabs__item
                                    button.btn-reset.switch-tabs__btn.switch-tabs__btn--active(data-switch-path="list" type="button") Списком
                                li.switch-tabs__item
                                    button.btn-reset.switch-tabs__btn(data-switch-path="map" type="button") На карте
                            .switch-tabs__content.switch-tabs__content--active.cart-shops(data-switch-target="list" data-simplebar)
                                -for(let i = 0; i < 8; i++)
                                    .cart-shop
                                        .cart-shop__text
                                            span.cart-shop__success вы выбрали
                                            address.cart-shop__address г. Санкт-Петрбург, ул. Антонова-Овсеенко, д. 35, корп. 3
                                            span.cart-shop__hours Пн-Пт 10:00-20:00, Сб,Вс 10:00-18:00
                                            span.cart-shop__tel Тел.: + 7 (914) 274-58-58, +7 (812) 375-88-54
                                        span.cart-shop__price от 2721,96 ₽* 4-5 дней
                                        a(href="#").g-link.cart-shop__link На карте
                                        button.btn-reset.g-btn.g-btn--stroke.cart-shop__choice(type="button") Выбрать
                            .switch-tabs__content.ordering__map(data-switch-target="map")
                                +map
                .ordering-content__item.g-accordion.isOpen
                    button.btn-reset.ordering-content__top.g-accordion__control.g-title(aria-expanded="true" type="button")
                        span Выберите способ оплаты
                        i.g-accordion__icon
                            +icon("arrow")
                    .g-accordion__content.payment-method(aria-hidden="false")
                        .ordering-switch__item
                            input.ordering-switch__input(type="radio", name="Selected radio" value="way1" checked)
                            label.ordering-switch__btn.ordering-switch__label
                                span.ordering-switch__title оплата при получении
                                span.ordering-switch__desc Наличными или банковской картой
                        .ordering-switch__item
                            input.ordering-switch__input(type="radio", name="Selected radio" value="way2")
                            label.ordering-switch__btn.ordering-switch__label
                                span.ordering-switch__title оплата при получении
                                span.ordering-switch__desc Наличными или банковской картой
                .ordering-content__item.g-accordion.isOpen
                    button.btn-reset.ordering-content__top.g-accordion__control.g-title(aria-expanded="true" type="button")
                        span Коментарии к заказу
                        i.g-accordion__icon
                            +icon("arrow")
                    .g-accordion__content.ordering-content__inner(aria-hidden="false")
                        label.ordering__label
                            span Комментарий
                            input.g-input.ordering__input--lg.ordering__input-comment(type="text" name="comment" placeholder="Оставьте свои комментарии, мы обязательно примем их во внимание")
                .ordering-content__item.g-accordion.isOpen.ordering-list(id="order-list")
                    .ordering-header
                        h2.g-title.g-title--center.ordering-header__title состав заказа
                        button.btn-reset.ordering-header__close.js-toggle-ordering-popup(type="button")
                            +icon("cross2")
                    button.btn-reset.ordering-content__top.g-accordion__control.g-title(aria-expanded="true" type="button")
                        span Состав заказа
                        i.g-accordion__icon
                            +icon("arrow")
                    .g-accordion__content.ordering-content__inner(aria-hidden="false")
                        .cart-table__top
                            span.cart-table__name НАИМЕНОВАНИЕ
                            span.cart-table__size РАЗМЕР
                            span.cart-table__quantity КОЛИЧЕСТВО
                            span.cart-table__price ЦЕНА
                            span.cart-table__total СУММА
                        .cart-table__items
                            -for(let i = 0; i < 4; i++)
                                +cartProduct("ordering__product")
                        button.btn-reset.g-btn.g-btn--stroke.cart-table__more(type="button") показать ещЁ
                            
            +orderingInfo
            button.btn-reset.ordering__open-popup.js-toggle-ordering-popup(type="button") состав заказа