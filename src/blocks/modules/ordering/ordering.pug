                            input.g-input.ordering__input(type="text" name="name" placeholder="Введите ваше имя")
                        label.ordering__label
                            span Номер телефона
                            input.g-input.ordering__input(type="tel" name="phoneNumber" placeholder="Введите ваш телефон")
