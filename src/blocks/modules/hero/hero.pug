section.hero
    .swiper.hero-slider
        .swiper-wrapper
            .swiper-slide
                .hero-slide.hero-slide--1
                    .container.hero-slide__container
                        h1.g-title.g-title--big.hero__title Заголовок
                        h2.g-title.hero__subtitle тригер - дополнительный текст
                        p.hero__desc наборный шрифт
                        a.g-btn.g-btn--black.hero__link(href="#") Смотреть
                        spam.hero__caption * Примечания, сноски
            .swiper-slide
                .hero-slide.hero-slide--2
                    .container.hero-slide__container
                        h1.g-title.g-title--big.g-title--white.hero__title Заголовок
                        h2.g-title.hero__subtitle.hero__subtitle--white тригер - дополнительный текст
                        p.hero__desc.hero__desc--white наборный шрифт
                        a.g-btn.hero__link.g-btn--white(href="#") Смотреть
                        spam.hero__caption * Примечания, сноски
        button.btn-reset.g-slider-btn.g-slider-btn--prev.hero-slider__btn.hero-slider__btn--prev
            +icon("arrow")
        button.btn-reset.g-slider-btn.g-slider-btn--next.hero-slider__btn.hero-slider__btn--next
            +icon("arrow")